    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-5513827905304864"
         data-ad-slot="1318024911"
         data-ad-format="auto"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
</div>